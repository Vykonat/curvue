{
  "name": "lavuql/lavuql",
  "version": "1.0.1",
  "type": "project",
  "description": "A Laravel Vue and GraphQL PWA boilerplate that focuses on performance and best practices.",
  "keywords": [
    "lavuql",
    "vue",
    "boilerplate",
    "laravel",
    "native",
    "script",
    "graphql"
  ],
  "license": "MIT",
  "require": {
    "php": "^7.4",
    "bkwld/laravel-pug": "^1.7",
    "fideloper/proxy": "^4.0",
    "laravel/framework": "^6.0",
    "laravel/tinker": "^1.0",
    "martinlindhe/laravel-vue-i18n-generator": "^0.1.39",
    "mll-lab/laravel-graphql-playground": "^1.0",
    "nuwave/lighthouse": "4.6",
    "sentry/sentry-laravel": "1.5.0",
    "tymon/jwt-auth": "1.0.*"
  },
  "require-dev": {
    "deployer/recipes": "^6.2",
    "filp/whoops": "^2.0",
    "fzaninotto/faker": "^1.4",
    "mockery/mockery": "^1.0",
    "nunomaduro/collision": "^3.0",
    "phpunit/phpunit": "^7.5"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "files": [
      "app/Http/Utils.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ],
    "test": "\"vendor/bin/phpunit\"",
    "reload": [
      "@composer install --optimize-autoloader -n --prefer-dist",
      "@php artisan config:cache",
      "@php artisan optimize",
      "@php artisan vue-i18n:generate"
    ],
    "release": [
      "@composer install --optimize-autoloader -n --prefer-dist",
      "@php artisan key:generate",
      "@php artisan jwt:secret"
    ]
  }
}
